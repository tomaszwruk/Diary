<Window x:Class="Diary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diary"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Dziennik ucznia" Height="450" Width="800">
 
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button Content="Dodaj" Height="25" Width="100" Margin="5"/>
            <Button Content="Edytuj" Height="25" Width="100" Margin="5"/>
            <Button Content="Usuń" Height="25" Width="100" Margin="5"/>
            <ComboBox Height="25" Width="150" Margin="5"/>
            <Button Content="Odśwież" Height="25" Width="100" Margin="5"/>
        </StackPanel>
        <!--2 wiersz-->
        <DataGrid Grid.Row="1" Margin="5"/>

    </Grid>
</Window>
